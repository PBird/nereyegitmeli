<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#c6c4b0"
        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="Tarihi Yerler"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="36sp"/>

        <Button
            android:id="@+id/btn_tar"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@drawable/greenarrow"
            android:textAlignment="center"
            android:gravity="center"
            android:paddingTop="15dp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#f539cdd2"
        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="Oteller"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="36sp"/>

        <Button
            android:id="@+id/btn_otel"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@drawable/greenarrow"
            android:textAlignment="center"
            android:gravity="center"
            android:paddingTop="15dp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#efe755"
        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="Gezilecek Yerler"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="36sp"/>

        <Button
            android:id="@+id/btn_gez"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@drawable/greenarrow"
            android:textAlignment="center"
            android:gravity="center"
            android:paddingTop="15dp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#b4739e"
        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="Restoranlar"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="36sp"/>

        <Button
            android:id="@+id/btn_res"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@drawable/greenarrow"
            android:textAlignment="center"
            android:gravity="center"
            android:paddingTop="15dp"
            />



    </LinearLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/basla"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"


        />





</LinearLayout>